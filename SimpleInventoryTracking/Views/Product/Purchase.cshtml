@model PurchaseViewModel

<form asp-action="Purchase" method="post" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductCode" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ProductCode" class="form-control" value="@Model.ProductCode" readonly />
            <span asp-validation-for="ProductCode" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control" value="@Model.Name" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Size" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Size" class="form-control" value="@Model.Size" readonly />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DatePurchased" class="col-md-2 control-label">Date Purchased</label>
        <div class="col-md-5">
            <input asp-for="DatePurchased" class="form-control datePicker" type="date" />
            <span asp-validation-for="DatePurchased" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Purchase" />
        </div>
    </div>

</form>